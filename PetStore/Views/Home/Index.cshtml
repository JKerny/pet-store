@model IEnumerable<PetStore.Repository.PocoClasses.Pet>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div id="container">
        @using (Ajax.BeginForm("PetData", "Home", null, new AjaxOptions { HttpMethod = "get", InsertionMode = InsertionMode.InsertAfter, UpdateTargetId = "pet-list" }, null))
        {
        <div id="pet-list">
            @Html.Partial("_PetList")
        </div>
        }
        <div id="progress" style="display:none">
            <h4>Loading...</h4>
        </div>
    </div>
</body>
</html>
