@model IEnumerable<PetStore.Areas.Admin.Models.Animal.AnimalType>

@{
    ViewBag.Title = "Index";
    Layout = "~/areas/admin/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

@foreach (var animal in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(x => animal.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = animal.AnimalTypeID }) |   
            @{ var petCount = animal.Pets != null ? animal.Pets.Count() : 0; }
            @Html.ActionLink("Delete", "Delete", new { id= animal.AnimalTypeID }, new { @class = "delete-animal",data_petcount = petCount})
        </td>
    </tr>
}

</table>




